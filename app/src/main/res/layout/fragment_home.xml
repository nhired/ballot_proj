<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:id="@+id/relativeLayout">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/top_bar"
                android:layout_width="414dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

<!--            <ImageView-->
<!--                android:id="@+id/imageView"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="32dp"-->
<!--                android:src="@drawable/back_arrow"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/top_bar"-->
<!--                app:layout_constraintStart_toStartOf="@+id/top_bar"-->
<!--                app:layout_constraintTop_toTopOf="@+id/top_bar" />-->

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Bills"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="38sp"
                app:layout_constraintBottom_toBottomOf="@+id/top_bar"
                app:layout_constraintEnd_toEndOf="@+id/top_bar"
                app:layout_constraintStart_toStartOf="@+id/top_bar"
                app:layout_constraintTop_toTopOf="@+id/top_bar" />

            <ImageView
                android:id="@+id/bill1"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_bar"
                android:src="@drawable/borders_act"/>

            <ImageView
                android:id="@+id/bill2"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bill1"
                android:src="@drawable/ncaa"/>

            <ImageView
                android:id="@+id/bill3"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/bill1"
                app:layout_constraintTop_toBottomOf="@+id/bill1"
                android:src="@drawable/defense"/>

            <ImageView
                android:id="@+id/bill4"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/bill2"
                app:layout_constraintTop_toBottomOf="@+id/bill2"
                android:src="@drawable/wage_act"/>

            <ImageView
                android:id="@+id/bill5"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/bill3"
                app:layout_constraintTop_toBottomOf="@id/bill3"
                android:src="@drawable/sj"/>

            <ImageView
                android:id="@+id/bill6"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/bill4"
                app:layout_constraintTop_toBottomOf="@id/bill4"
                android:src="@drawable/weapons_ban"/>

            <ImageView
                android:id="@+id/bill7"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/bill5"
                app:layout_constraintTop_toBottomOf="@id/bill5"
                android:src="@drawable/taxpayer"/>

            <ImageView
                android:id="@+id/bill8"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/bill6"
                app:layout_constraintTop_toBottomOf="@id/bill6"
                android:src="@drawable/parenthood_act"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>